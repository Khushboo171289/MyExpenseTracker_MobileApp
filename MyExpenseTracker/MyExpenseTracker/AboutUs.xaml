<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="MyExpenseTracker.AboutUs"
             Title="App Details">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#69CAEE">
            <Label Text="**Team 7 Expense Tracker Mobile Application**
                   
                   
                   By using this tool, we hope you can better manage your wealth !!"

                   FontAttributes="Bold"
                   FontSize="Large"
                   BackgroundColor="#69CAEE"   
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="End" 
                   Margin="10,10,10,10"/>
            <Label Text="This application is easy to use and is intuitive"
                   TextColor="Black"
                   FontAttributes="Italic"
                   FontSize="Large"
                   BackgroundColor="#69CAEE"   
                VerticalOptions="StartAndExpand" 
                HorizontalOptions="End" 
                   Margin="10,15,10,20"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage> 